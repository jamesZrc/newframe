<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.james.system.model.UserModel">

    <resultMap type="com.james.system.model.UserModel" id="usermap">
        <id column="id" property="id"/>
        <result property="username" column="username"/>
        <result property="password" column="password"/>
        <result property="enabled" column="enabled" />
        <result property="accountNonExpired" column="account_non_expired"/>
        <result property="credentialsNonExpired" column="credentials_non_expired"/>
        <result property="accountNonLocked" column="account_non_locked"/>
    </resultMap>

    <select id="getUsers" resultMap="usermap">
        SELECT * FROM USERS
    </select>

    <select id="getUserByUsername" parameterType="java.lang.String" resultType="com.james.system.model.UserModel">
        SELECT * FROM USERS WHERE username = #{username}
    </select>
</mapper>