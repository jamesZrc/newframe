<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.james.system.dao.RoleDao">

    <select id="getRoles" resultType="com.james.system.model.RoleModel">
        SELECT * FROM ROLES
    </select>

    <select id="getRolesByUser" parameterType="com.james.system.model.UserModel" resultType="com.james.system.model.RoleModel">
        SELECT * FROM ROLES WHERE ID in (
          SELECT ROLE_ID FROM USER_ROLE WHERE USER_ID = #{id}
        )
    </select>

    <select id="getRoleByRoleName" parameterType="String" resultType="com.james.system.model.RoleModel">
       SELECT * FROM ROLES WHERE NAME = #{roleName}
    </select>
</mapper>